{
   "package": {
        "name":     "${REPO}",
        "repo":     "${PROG_ROOT}",
        "subject":  "${SUBJ}"
    },
    "version": {
        "name":     "${SEMVER}",
        "desc":     "${DSCRIP}",
        "released": "${RELDTE}",
        "vcs_tag":  "v${SEMVER}",
        "gpgSign":  false
    },
    "files": [{
        "includePattern": "./(${PROG}.*?\.(?:gz|rpm|deb))",
        "excludePattern": "./.*/.*",
        "uploadPattern":  "${REPO}/${SEMVER}/$1"
    }],
    "publish": true
}
